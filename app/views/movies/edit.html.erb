<div class="container">
  <h1><%= content_for?(:title) ? content_for(:title) : "Edit Movie" %></h1>

  <%= form_with(model: @movie) do |form| %>
    <% if @movie.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
        <ul>
          <% @movie.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <legend>Movie Details</legend>

      <%= form.label :title %>
      <%= form.text_field :title %>

      <%= form.label :rating %>
      <%= form.text_field :rating %>

      <%= form.label :description %>
      <%= form.text_field :description %>

      <%= form.label :release_date %>
      <%= form.text_field :release_date %>
    </fieldset>

    <%= form.submit %>
  <% end %>

  <%= link_to "Back to movies", movies_path(sort: params[:sort], direction: params[:direction]), class: "back-link" %>
</div>
